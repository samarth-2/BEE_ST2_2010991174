<html>
    <head>
        <style>
            body {
              background-color: #EDF4FF;
            }
            
           .signup_outer{
                height: 100vh;
                width: 100%;
              color: maroon;
              margin-left: 40px;
            }
            </style>
    </head>
    <body>
        <div class="signup__outer">
            
            <div class="signup__inner">
                <div class="signup__inner__left">
                    <form action="/signup" method="POST">
                        <div>
                            Welcome
                        </div>
                        <div>
                            already have an account <a href="/login">login</a>
                        </div>
                        <div>
                            <input type="text" name ="username"  placeholder="Enter Your Username" id="username">
                            <input type="text" name ="name" placeholder="Enter Your Name" id="name">
                            <input type="password" name ="password" placeholder="Enter Your Password" id="password">
                            <input type="number" name ="contact" placeholder="Enter Your Mobile number" id="contact">
                            <div>
                                Male
                                <input type="radio" value="male" name="gender" id="male">
                                Female
                                <input type="radio" value="female" name="gender" id="female">
                            </div>

                        </div>
                        <div>
                            <button type="submit">submit</button>
                        </div>
                    </form>
                </div>
                <div class="signup__inner__right">

                </div>
            </div>
        </div>
    </body>
</html>